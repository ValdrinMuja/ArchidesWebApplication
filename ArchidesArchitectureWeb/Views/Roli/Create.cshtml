@model ArchidesArchitectureWeb.Roli

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Website CSS style -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link href="~/Content/styleUser.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="main-login main-center">
                <h3>Create Role</h3>
                <form class="" method="post" action="#">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="role" class="cols-sm-2 control-label">User Role</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user-secret" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Roli1, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtrole",
                                   @placeholder = "User Role",
                                   @required = "required",
                                   @pattern = "^[A-Z]+[a-zA-Z]*$"
                               }
                           })
                            </div>
                        </div>

                        @Html.ValidationMessageFor(model => model.Roli1, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
</body>
</html>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



