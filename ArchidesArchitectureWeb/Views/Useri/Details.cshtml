                                        <dd>Surname:</dd>
                                        <dt>@Html.DisplayFor(model => model.Mbiemri)</dt>     
                                        <dt>Gender:</dt>
                                        <dd>@Html.DisplayFor(model => model.Gjinia)</dd>
                                        <dt>Birthplace:</dt>
