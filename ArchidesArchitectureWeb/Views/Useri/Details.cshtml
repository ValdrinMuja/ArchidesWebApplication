                                        <dd>Birthdate:</dd>
                                        <dt>@Html.DisplayFor(model => model.Datelindja)</dt>                         
                                        <dt>Email:</dt>
                                        <dd>@Html.DisplayFor(model => model.Email)</dd>
                                        <dt>Telefoni:</dt>
                                        <dd>@Html.DisplayFor(model => model.Telefoni)</dd>
                                        <dt>Username:</dt>
                                        <dd>@Html.DisplayFor(model => model.Username)</dd>
                                        <dt>Description:</dt>
                                        <dd>@Html.DisplayFor(model => model.Pershkrimi)</dd>
