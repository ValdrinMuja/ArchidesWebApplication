                                </div>
                                <div class=" col-md-9 col-lg-9 hidden-xs hidden-sm">
                                    <strong>Information</strong><br>
                                    <table class="table table-user-information">
                                        <tbody>                                         
                                            <tr>
                                                <td>Role:</td>
                                                <td>@Html.DisplayFor(model => model.Roli.Roli1)</td>
                                            </tr>
                                            <tr>
                                                <td>Name:</td>
                                                <td>@Html.DisplayFor(model => model.Emri)</td>
                                            </tr>
                                            <tr>
                                                <td>Surname:</td>
                                                <td>@Html.DisplayFor(model => model.Mbiemri)</td>
                                            </tr>
                                            <tr>
                                                <td>Gender:</td>
                                                <td>@Html.DisplayFor(model => model.Gjinia)</td>
                                            </tr>
                                            <tr>
                                                <td>Birthplace:</td>
                                                <td>@Html.DisplayFor(model => model.Vendlindja)</td>
                                            </tr>
                                            <tr>
                                                <td>Birthdate:</td>
                                                <td>@Html.DisplayFor(model => model.Datelindja)</td>
                                            </tr>
                                            <tr>
                                                <td>Email:</td>
                                                <td>@Html.DisplayFor(model => model.Email)</td>
                                            </tr>
                                            <tr>
                                                <td>Phone Number:</td>
                                                <td>@Html.DisplayFor(model => model.Telefoni)</td>
                                            </tr>
                                            <tr>
                                                <td>Username:</td>
                                                <td>@Html.DisplayFor(model => model.Username)</td>
                                            </tr>
                                            <tr>
                                                <td>Description:</td>
