@model ArchidesArchitectureWeb.Useri

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Website CSS style -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link href="~/Content/styleUser.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>
<body>
@using (Html.BeginForm("Create", "Useri", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row main">
            <div class="main-login main-center">
                <h3>Form to Create New User</h3>
                <form class="" method="post" action="#">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">User Name</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                  @Html.EditorFor(model => model.Emri, new
                             {
                                 htmlAttributes = new
                                 {
                                     @class = "form-control",
                                     @id = "txtemri",
                                     @placeholder = "User Name",
                                     @required = "required",
                                     @pattern = "^[A-Z]+[a-zA-Z]*$"
                                 }
                             })                                 
                                </div>
                            @Html.ValidationMessageFor(model => model.Emri, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="surname" class="cols-sm-2 control-label">User Surname</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Mbiemri, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtmbiemri",
                                   @placeholder = "User Surname",
                                   @required = "required",
                                   @pattern = "^[A-Z]+[a-zA-Z]*$"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Mbiemri, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="gender" class="cols-sm-2 control-label">User Gender</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-transgender-alt" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Gjinia, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtgjinia",
                                   @placeholder = "User Gender",
                                   @required = "required",
                                   @pattern = "^[A-Z]+[a-zA-Z]*$"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Gjinia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="birthplace" class="cols-sm-2 control-label">User BirthPlace</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-globe" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Vendlindja, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtvendlindja",
                                   @placeholder = "User Birthplace",
                                   @required = "required",
                                   @pattern = "^[A-Z]+[a-zA-Z]*$"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Vendlindja, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="birthdate" class="cols-sm-2 control-label">User BirthDate</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-birthday-cake" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Datelindja, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtDatelindja",
                                   @placeholder = "User Birthdate",
                                   @required = "required",
                                   @pattern = @"^\d{2}/\d{2}/\d{4}$"
                               }
                           }) 
    @*ni validim ma t mire*@
                                @Html.ValidationMessageFor(model => model.Datelindja, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="cols-sm-2 control-label">User Email</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Email, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtemail",
                                   @placeholder = "User Email",
                                   @required = "required",
                                   @pattern = @"\b[A - Z0 - 9._ % +-] +@[A - Z0 - 9.-] +\.[A - Z]{ 2,}\b"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone" class="cols-sm-2 control-label">User Phone</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-phone-square" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Telefoni, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txttelefoni",
                                   @placeholder = "User Phone Number",
                                   @required = "required",
                                   @minLength = "8",
                                   @pattern = @"^\d{ 1,9}$"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Telefoni, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username" class="cols-sm-2 control-label">Username</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Username, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtUsername",
                                   @placeholder = "Username",
                                   @required = "required",
                                   @pattern = "^[A-Z]+[a-zA-Z]+[0-9]*$"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="cols-sm-2 control-label">User Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Password, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @id = "txtPassword",
                                   @placeholder = "Password",
                                   @required = "required",
                                   @minLength = "8",
                                   @maxLength = "18"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm User Password" />
                            </div>
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label for="education" class="cols-sm-2 control-label">User Education</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-graduation-cap" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Pershkrimi, new { htmlAttributes = new { @class = "form-control", placeholder = "User Education is not necessary" } })
                                @Html.ValidationMessageFor(model => model.Pershkrimi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="profesionalpreparation" class="cols-sm-2 control-label">User Professional Preparation</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-briefcase" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.PergaditjaProfesionale, new { htmlAttributes = new { @class = "form-control", placeholder = "Professional Preparation are not necessary" } })
                                @Html.ValidationMessageFor(model => model.PergaditjaProfesionale, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="roleofuser" class="cols-sm-2 control-label">User Role</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user-secret" aria-hidden="true"></i></span>
                                @Html.DropDownList("RoliID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RoliID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="userphoto" class="cols-sm-2 control-label">Browse User Photo</label>
                        <div class="cols-sm-10">
                            <div class="input-group">   
                                <span class="input-group"><i class="fa fa-picture-o" aria-hidden="true"></i></span>
                                <input type="file" id="ImageFile" name="ImageFile"/>    
                            </div>
                        </div>
                    </div>       
     
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block login-button" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
</body>
</html>


